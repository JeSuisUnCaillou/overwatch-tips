<p id="notice"><%= notice %></p>

<h1>Listing des <%= @type.pluralize %></h1>


<div class="row">
  <% @gaming_objects.each do |gaming_object| %>
  
    <div class="col-md-4">
      <%= link_to gaming_object do %>
        <%= gaming_object.name %> <%= gaming_object.description %>
      <% end %>
    </div>
    
  <% end %>
  
</div>




<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gaming_objects.each do |gaming_object| %>
      <tr>
        <td><%= gaming_object.name %></td>
        <td><%= gaming_object.description %></td>
        <td><%= gaming_object.type %></td>
        <td><%= link_to 'Show', gaming_object %></td>
      </tr>
    <% end %>
  </tbody>
</table>
