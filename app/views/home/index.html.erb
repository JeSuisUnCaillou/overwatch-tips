<div class="row standard-margin">
    <div class="col-md-8 pull-right home-welcome">
        <h1 class="h1-home">WELCOME TO OVERWATCH - TIPS</h1>
        <h2 class="h2-home">A platform to share advices about Overwatch.</h2>
    </div>
</div>

<div class="standard-margin">
    <div class="row">
        <% @tips[0..1].each do |tip| %>
            <%= render partial: "tips/show", locals: { tip: tip, with_gaming_object_description: true, klass: "col-md-6" } %>
        <% end %>
    </div>
    <div class="row">
        <% @tips[2..3].each do |tip| %>
            <%= render partial: "tips/show", locals: { tip: tip, with_gaming_object_description: true, klass: "col-md-6" } %>
        <% end %>
    </div>    
</div>
